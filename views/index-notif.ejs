<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="/notif-index.css">


<div class="show-page">
    <div style="padding-top: 70px; padding-bottom: 50px; background-image: url(/images/notification-archive.svg); background-repeat: no-repeat; background-position: 50% 25%;" class="online-cv section-overly pt-90 pb-120">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <div class="cv-caption text-center">
                        <p class="pera2 mt-5"> Notification Archive</p>
                        <a href="/notifications/new" class="home-text text-decoration-none border-btn2 border-btn4">Push a New Notification</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    </div>



<div class=" py-2">
        <div class="container rounded-3">
            <div class="container">
                
            
                <div class="card bg-light mb-3">
                    <div class="row g-0">
                        <div class="col-md-3 d-flex align-items-center">
                           
                        </div>
                        <div class="col-md-6 py-3">
                            <div class="card-body">
                                <h5 class="card-title ">
                                    
                                    <% for( let notif of allNotifs ) { %>
                                        <div class="py-5">
                                            body: <%= notif.body.slice(0, 5) %>..., posted by: <%= notif.author %>


                                            <div class="col-md-3 d-flex align-items-center justify-content-center">
                                                
                                                <form action="/notifications/<%=notif._id%>?_method=DELETE" method="POST">
                                                   
                                                </form>
                                            </div>

                                            <div class="btn-group py-2" role="group" aria-label="Basic example">
                                                
                                                <button type="button" class="btn btn-secondary" data-bs-toggle="tooltip" data-bs-placement="left"
                                                title="<%= notif.body %>">view</button>
                                                
                                              </div>
                                              <div class="notif-delete py-3">
                                                <form action="/notifications/<%= notif._id %>?_method=DELETE" method="post">
                                                    <input type="submit" value="delete">
                                                </form>

                                              </div>

                                              










                                            
                                        <% } %>

                                </h5>
                                <p class="card-text"><small class="text-muted">
                                    
                                </small></p>
                            </div>
                        </div>

                        </div>
                        </div>

                        </div>
                        </div>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
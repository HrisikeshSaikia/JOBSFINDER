<%- include('./partials/header.ejs') %>
<link rel="stylesheet" href="/index.css">
<div class="title">
    <h1 class="title1"> Welcome to Hirehub</h1>
</div>





    <div class="find">
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="cv-caption text-center">
                <h3><p class="pera2 mt-2"> Apply Now! </p></h3>
                
                <div class="d-flex justify-content-center">
                    <div class="job-search-field">
                        <div class="job-search-item">
                            <form action="/jobs" method="GET" class="form row">
                                <div class="col-lg-6">
                                    <div class="form-group mb-3">
                                        <div class="home-text d-flex">
                                            <label class="form-label"></label>
                                            <span class="ms-auto"></span>
                                        </div>
                                        <div class="position-relative left-icon">
                                            <input type="text" class="form-control" name="search" placeholder="Job title, or company">
                                            <i class="fas fa-search"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-12">
                                    <div class="form-group form-action mb-3">
                                        <button type="submit" class="btn btn-danger btn-lg"><i class="fas fa-search"></i> Find Jobs</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-3 mx-auto my-5">
            <p class="pera2"> Login</p>
            <form class="my-3 needs-validation" action="/login" method="post" novalidate>
                <div class="form-floating mb-3">
                    <input name="username" type="email" class="form-control" id="email" placeholder="name@example.com"
                        required>
                    <label for="email">Email address</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please choose a valid email.
                    </div>
                </div>
                <div class="form-floating">
                    <input name="password" type="password" class="form-control" id="password" placeholder="Password"
                        required>
                    <label for="password">Password</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a password.
                    </div>
                </div>
                <input class=" mt-3 btn btn-primary" type="submit" value="login">
            </form>
        </div>
    </div>
</div>




<%- include('./partials/footer.ejs') %>